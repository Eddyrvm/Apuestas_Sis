@model IEnumerable<Apuestas_Sis.Models.Agencia>

@{
    ViewData["Title"] = "Agencias";
}

<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Gestión de Agencias</h1>

    <a asp-action="Create" class="btn btn-sm btn-primary shadow-sm">
        <i class="fas fa-plus fa-sm text-white-50"></i>
        Nueva Agencia
    </a>
</div>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Listado de Agencias</h6>
    </div>

    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered table-hover" width="100%" cellspacing="0">
                <thead class="thead-light">
                    <tr>
                        <th>Nombre</th>
                        <th>Dirección</th>
                        <th class="text-center">Estado</th>
                        <th>Fecha Registro</th>
                        <th class="text-center">Acciones</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Nombre</td>
                            <td>@item.Direccion</td>

                            <td class="text-center">
                                @if (item.Activo)
                                {
                                    <span class="badge badge-success">Activa</span>
                                }
                                else
                                {
                                    <span class="badge badge-secondary">Inactiva</span>
                                }
                            </td>

                            <td>@item.FechaRegistro.ToString("dd/MM/yyyy HH:mm")</td>

                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@item.AgenciaId"
                                   class="btn btn-sm btn-warning" title="Editar">
                                    <i class="fas fa-edit"></i>
                                </a>

                                <a asp-action="Details" asp-route-id="@item.AgenciaId"
                                   class="btn btn-sm btn-info" title="Detalles">
                                    <i class="fas fa-eye"></i>
                                </a>

                                <a asp-action="Delete" asp-route-id="@item.AgenciaId"
                                   class="btn btn-sm btn-danger" title="Eliminar">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
                </table>
                </div>
                </div>
                <</div>
