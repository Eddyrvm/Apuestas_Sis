@model Apuestas_Sis.Models.ModalidadApuesta

@{
    ViewData["Title"] = "Crear Modalidad";
}

<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Crear Modalidad de Apuesta</h1>
    <a asp-action="Index" class="d-none d-sm-inline-block btn btn-sm btn-secondary shadow-sm">
        <i class="fas fa-arrow-left fa-sm text-white-50"></i> Volver
    </a>
</div>

<!-- Card -->
<div class="row">
    <div class="col-lg-7 col-xl-6">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Datos de la Modalidad</h6>
            </div>

            <div class="card-body">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <div class="form-group">
                        <label asp-for="Cifras" class="control-label"></label>
                        <input asp-for="Cifras" class="form-control" placeholder="Ej.: 2 o 3" />
                        <span asp-validation-for="Cifras" class="text-danger"></span>
                        <small class="form-text text-muted">Define el número de cifras de la apuesta.</small>
                    </div>

                    <div class="form-group">
                        <label asp-for="Descripcion" class="control-label"></label>
                        <input asp-for="Descripcion" class="form-control" placeholder="Ej.: Apuesta de 2 cifras" />
                        <span asp-validation-for="Descripcion" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <div class="custom-control custom-checkbox">
                            <input asp-for="Activo" class="custom-control-input" id="chkActivo" />
                            <label class="custom-control-label" for="chkActivo">
                                @Html.DisplayNameFor(m => m.Activo)
                            </label>
                        </div>
                    </div>

                    <!-- FechaCreacion NO se expone -->

                    <hr />

                    <div class="d-flex justify-content-end">
                        <a asp-action="Index" class="btn btn-secondary mr-2">
                            Cancelar
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> Guardar
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
