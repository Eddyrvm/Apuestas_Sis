@model IEnumerable<Apuestas_Sis.Models.ModalidadApuesta>

@{
    ViewData["Title"] = "Modalidades de Apuesta";
}

<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Modalidades de Apuesta</h1>
</div>

<!-- Card -->
<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex align-items-center justify-content-between">
        <h6 class="m-0 font-weight-bold text-primary">Listado</h6>
        <a asp-action="Create" class="btn btn-sm btn-primary">
            <i class="fas fa-plus"></i> Nueva Modalidad
        </a>
    </div>

    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered table-hover" width="100%" cellspacing="0">
                <thead class="thead-light">
                    <tr>
                        <th>@Html.DisplayNameFor(m => m.First().Cifras)</th>
                        <th>@Html.DisplayNameFor(m => m.First().Descripcion)</th>
                        <th>@Html.DisplayNameFor(m => m.First().Activo)</th>
                        <th>@Html.DisplayNameFor(m => m.First().FechaCreacion)</th>
                        <th style="width: 180px;">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Cifras</td>
                                <td>@item.Descripcion</td>
                                <td>
                                    @if (item.Activo)
                                    {
                                        <span class="badge badge-success">Activo</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-secondary">Inactivo</span>
                                    }
                                </td>
                                <td>@item.FechaCreacion.ToString("dd/MM/yyyy HH:mm")</td>
                                <td class="text-nowrap">
                                    <a asp-action="Edit" asp-route-id="@item.ModalidadApuestaId"
                                       class="btn btn-sm btn-warning mr-1" title="Editar">
                                        <i class="fas fa-edit"></i>
                                    </a>

                                    <a asp-action="Delete" asp-route-id="@item.ModalidadApuestaId"
                                       class="btn btn-sm btn-danger" title="Eliminar">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center text-muted">
                                No existen modalidades registradas.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
