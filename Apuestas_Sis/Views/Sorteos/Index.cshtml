@model IEnumerable<Apuestas_Sis.Models.Sorteo>

@{
    ViewData["Title"] = "Sorteos";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Sorteos</h1>

    <a asp-action="Create" class="btn btn-sm btn-primary shadow-sm">
        <i class="fas fa-plus fa-sm text-white-50"></i>
        Nuevo Sorteo
    </a>
</div>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Listado de sorteos</h6>
    </div>

    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered table-hover" id="dataTable" width="100%" cellspacing="0">
                <thead class="thead-light">
                    <tr>
                        <th>Nombre</th>
                        <th>Fecha sorteo</th>
                        <th class="text-center">Estado</th>
                        <th class="text-center">Activo</th>
                        <th>Observación</th>
                        <th>Creación</th>
                        <th>Tipo juego</th>
                        <th>Modalidad</th>
                        <th>Creado por</th>
                        <th class="text-center" style="width: 140px;">Acciones</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Nombre</td>

                            <td>
                                @item.FechaSorteo.ToString("yyyy-MM-dd HH:mm")
                            </td>

                            <td class="text-center">
                                @{
                                    // Ajusta si tu Estado es enum/string
                                    var estadoText = item.Estado?.ToString() ?? "";
                                    var estadoBadge = "badge-secondary";

                                    // mapeo simple (personaliza a tus estados reales)
                                    if (estadoText.ToLower().Contains("abierto") || estadoText.ToLower().Contains("pend"))
                                        estadoBadge = "badge-warning";
                                    else if (estadoText.ToLower().Contains("cerr") || estadoText.ToLower().Contains("final"))
                                        estadoBadge = "badge-success";
                                    else if (estadoText.ToLower().Contains("anul") || estadoText.ToLower().Contains("cancel"))
                                        estadoBadge = "badge-danger";
                                }

                                <span class="badge @estadoBadge">@estadoText</span>
                            </td>

                            <td class="text-center">
                                @if (item.Activo)
                                {
                                    <span class="badge badge-success">Sí</span>
                                }
                                else
                                {
                                    <span class="badge badge-danger">No</span>
                                }
                            </td>

                            <td class="text-truncate" style="max-width: 220px;" title="@item.Observacion">
                                @(string.IsNullOrWhiteSpace(item.Observacion) ? "-" : item.Observacion)
                            </td>

                            <td>
                                @item.FechaCreacion.ToString("yyyy-MM-dd HH:mm")
                            </td>

                            <td>
                                @(item.TipoJuego != null ? item.TipoJuego.Nombre : "-")
                            </td>

                            <td>
                                @* Cambia esto si tu ModalidadApuesta tiene Descripcion o Cifras *@
                                @(item.ModalidadApuesta != null
                                    ? (string.IsNullOrWhiteSpace(item.ModalidadApuesta.Descripcion)
                                    ? item.ModalidadApuesta.ModalidadApuestaId.ToString()
                                    : item.ModalidadApuesta.Descripcion)
                                    : "-")
                            </td>

                            <td>
                                @(item.CreadoPorUsuario != null
                                    ? (item.CreadoPorUsuario.Apellidos + " " + item.CreadoPorUsuario.Nombres)
                                    : "-")
                            </td>

                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@item.SorteoId"
                                   class="btn btn-sm btn-warning" title="Editar">
                                    <i class="fas fa-edit"></i>
                                </a>

                                <a asp-action="Details" asp-route-id="@item.SorteoId"
                                   class="btn btn-sm btn-info" title="Detalle">
                                    <i class="fas fa-eye"></i>
                                </a>

                                <a asp-action="Delete" asp-route-id="@item.SorteoId"
                                   class="btn btn-sm btn-danger" title="Eliminar">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="~/vendor/datatables/dataTables.bootstrap4.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#dataTable').DataTable({
                pageLength: 10,
                order: [[1, "desc"]],
                language: {
                    search: "Buscar:",
                    lengthMenu: "Mostrar _MENU_ registros",
                    info: "Mostrando _START_ a _END_ de _TOTAL_ registros",
                    infoEmpty: "Mostrando 0 a 0 de 0 registros",
                    infoFiltered: "(filtrado de _MAX_ registros)",
                    zeroRecords: "No se encontraron resultados",
                    paginate: { previous: "Anterior", next: "Siguiente" }
                }
            });
        });
    </script>
}
