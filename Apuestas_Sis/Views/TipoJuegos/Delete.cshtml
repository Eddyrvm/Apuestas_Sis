@model Apuestas_Sis.Models.TipoJuego

@{
    ViewData["Title"] = "Eliminar Tipo de Juego";
}

<div class="container-fluid">

    <div class="card shadow mb-4 border-left-danger">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-danger">Eliminar Tipo de Juego</h6>
            <a asp-action="Index" class="btn btn-sm btn-secondary">
                <i class="fas fa-arrow-left"></i> Volver
            </a>
        </div>

        <div class="card-body">

            <div class="alert alert-warning" role="alert">
                <i class="fas fa-exclamation-triangle"></i>
                ¿Está seguro que desea eliminar este tipo de juego?
                <div class="small text-muted mt-1">
                    Esta acción no se puede deshacer.
                </div>
            </div>

            <div class="row">
                <div class="col-lg-8">

                    <dl class="row mb-0">
                        <dt class="col-sm-4 text-gray-700">Nombre</dt>
                        <dd class="col-sm-8">@Model.Nombre</dd>

                        <dt class="col-sm-4 text-gray-700">Descripción</dt>
                        <dd class="col-sm-8">
                            @(string.IsNullOrWhiteSpace(Model.Descripcion)
                                ? Html.Raw("<span class='text-muted'>—</span>")
                                : Model.Descripcion)
                        </dd>

                        <dt class="col-sm-4 text-gray-700">Estado</dt>
                        <dd class="col-sm-8">
                            @if (Model.Activo)
                            {
                                <span class="badge badge-success">Activo</span>
                            }
                            else
                            {
                                <span class="badge badge-secondary">Inactivo</span>
                            }
                        </dd>

                        <dt class="col-sm-4 text-gray-700">Fecha de creación</dt>
                        <dd class="col-sm-8">@Model.FechaCreacion.ToString("dd/MM/yyyy HH:mm")</dd>
                    </dl>

                </div>
            </div>

            <hr />

            <form asp-action="Delete" method="post" class="d-flex align-items-center">
                <input type="hidden" asp-for="TipoJuegoId" />

                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-trash"></i> Eliminar
                </button>

                <a asp-action="Index" class="btn btn-outline-secondary ml-2">
                    Cancelar
                </a>
            </form>

        </div>
    </div>

</div>
