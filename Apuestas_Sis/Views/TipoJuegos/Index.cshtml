@model IEnumerable<Apuestas_Sis.Models.TipoJuego>

@{
    ViewData["Title"] = "Tipos de Juego";
}

<div class="container-fluid">

    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Tipos de Juego</h1>

        <a asp-action="Create" class="btn btn-primary btn-sm">
            <i class="fas fa-plus"></i> Nuevo Tipo de Juego
        </a>
    </div>

    <!-- Tabla -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">
                Listado de Tipos de Juego
            </h6>
        </div>

        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-hover" width="100%" cellspacing="0">
                    <thead class="thead-light">
                        <tr>
                            <th>Nombre</th>
                            <th>Descripción</th>
                            <th class="text-center">Estado</th>
                            <th>Fecha Creación</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Nombre</td>

                                <td>
                                    @(string.IsNullOrWhiteSpace(item.Descripcion)
                                        ? Html.Raw("<span class='text-muted'>—</span>")
                                        : item.Descripcion)
                                </td>

                                <td class="text-center">
                                    @if (item.Activo)
                                    {
                                        <span class="badge badge-success">Activo</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-secondary">Inactivo</span>
                                    }
                                </td>

                                <td>
                                    @item.FechaCreacion.ToString("dd/MM/yyyy HH:mm")
                                </td>

                                <td class="text-center">
                                    <a asp-action="Edit"
                                       asp-route-id="@item.TipoJuegoId"
                                       class="btn btn-sm btn-warning"
                                       title="Editar">
                                        <i class="fas fa-edit"></i>
                                    </a>

                                    <a asp-action="Delete"
                                       asp-route-id="@item.TipoJuegoId"
                                       class="btn btn-sm btn-danger"
                                       title="Eliminar">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                @if (!Model.Any())
                {
                    <div class="text-center text-muted mt-3">
                        No existen tipos de juego registrados.
                    </div>
                }
            </div>
        </div>
    </div>

</div>
