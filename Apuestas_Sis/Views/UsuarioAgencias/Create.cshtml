@model Apuestas_Sis.Models.UsuarioAgencia

@{
    ViewData["Title"] = "Asignar Usuario a Agencia";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Asignar Usuario a Agencia</h1>
    <a asp-action="Index" class="btn btn-sm btn-secondary shadow-sm">
        <i class="fas fa-arrow-left fa-sm text-white-50"></i>
        Volver
    </a>
</div>

<div class="row">
    <div class="col-lg-7">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Registro de asignación</h6>
            </div>

            <div class="card-body">
                <form asp-action="Create" method="post" autocomplete="off">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <!-- Usuario -->
                    <div class="form-group">
                        <label asp-for="UsuarioId" class="control-label"></label>
                        <select asp-for="UsuarioId"
                                class="custom-select"
                                asp-items="ViewBag.UsuarioId">
                            <option value="">-- Seleccione un usuario --</option>
                        </select>
                        <span asp-validation-for="UsuarioId" class="text-danger"></span>
                    </div>

                    <!-- Agencia -->
                    <div class="form-group">
                        <label asp-for="AgenciaId" class="control-label"></label>
                        <select asp-for="AgenciaId"
                                class="custom-select"
                                asp-items="ViewBag.AgenciaId">
                            <option value="">-- Seleccione una agencia --</option>
                        </select>
                        <span asp-validation-for="AgenciaId" class="text-danger"></span>
                    </div>

                    <hr />

                    <!-- Estado -->
                    <div class="form-group">
                        <div class="custom-control custom-checkbox">
                            <input asp-for="Activo" class="custom-control-input" id="ActivoCheck" />
                            <label class="custom-control-label" for="ActivoCheck">
                                Activo
                            </label>
                        </div>
                        <small class="form-text text-muted">
                            Si se desactiva, se registrará la fecha de desactivación automáticamente.
                        </small>
                    </div>

                    <div class="mt-4 d-flex justify-content-end">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save fa-sm"></i>
                            Guardar
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

