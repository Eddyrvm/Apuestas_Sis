@model Apuestas_Sis.Models.ViewModels.UsuarioAgenciasDetailsVM

@{
    ViewData["Title"] = "Detalle de Agencias del Usuario";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Detalle de Agencias</h1>
    <a asp-action="Index" class="btn btn-sm btn-secondary shadow-sm">
        <i class="fas fa-arrow-left fa-sm text-white-50"></i>
        Volver
    </a>
</div>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Usuario: @Model.UsuarioNombre</h6>
    </div>

    <div class="card-body">

        <!-- AGENCIAS ACTIVAS -->
        <h6 class="font-weight-bold text-success mb-2">AGENCIAS ACTIVAS</h6>

        @if (Model.Activas.Count == 0)
        {
            <div class="alert alert-info">No existen agencias activas para este usuario.</div>
        }
        else
        {
            <div class="table-responsive mb-4">
                <table class="table table-bordered table-hover" width="100%" cellspacing="0">
                    <thead class="thead-light">
                        <tr>
                            <th>Agencia</th>
                            <th>Fecha Asignación</th>
                            <th class="text-center" style="width: 90px;">Estado</th>
                            <th class="text-center" style="width: 140px;">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Activas)
                        {
                            <tr>
                                <td>@item.Agencia.Nombre</td>
                                <td>@item.FechaAsignacion.ToString("yyyy-MM-dd HH:mm")</td>
                                <td class="text-center">
                                    <span class="badge badge-success">Activo</span>
                                </td>
                                <td class="text-center">
                                    <a asp-action="Edit"
                                       asp-route-usuarioId="@item.UsuarioId"
                                       asp-route-agenciaId="@item.AgenciaId"
                                       class="btn btn-sm btn-warning" title="Editar">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-action="Delete"
                                       asp-route-usuarioId="@item.UsuarioId"
                                       asp-route-agenciaId="@item.AgenciaId"
                                       class="btn btn-sm btn-danger" title="Eliminar">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }

        <!-- AGENCIAS INACTIVAS -->
        <h6 class="font-weight-bold text-danger mb-2">AGENCIAS INACTIVAS</h6>

        @if (Model.Inactivas.Count == 0)
        {
            <div class="alert alert-info">No existen agencias inactivas para este usuario.</div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-bordered table-hover" width="100%" cellspacing="0">
                    <thead class="thead-light">
                        <tr>
                            <th>Agencia</th>
                            <th>Fecha Asignación</th>
                            <th>Fecha Desactivación</th>
                            <th class="text-center" style="width: 90px;">Estado</th>
                            <th class="text-center" style="width: 140px;">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Inactivas)
                        {
                            <tr>
                                <td>@item.Agencia.Nombre</td>
                                <td>@item.FechaAsignacion.ToString("yyyy-MM-dd HH:mm")</td>
                                <td>
                                    @(item.FechaDesactivacion.HasValue
                                        ? item.FechaDesactivacion.Value.ToString("yyyy-MM-dd HH:mm")
                                        : "-")
                                </td>
                                <td class="text-center">
                                    <span class="badge badge-danger">Inactivo</span>
                                </td>
                                <td class="text-center">
                                    <a asp-action="Edit"
                                       asp-route-usuarioId="@item.UsuarioId"
                                       asp-route-agenciaId="@item.AgenciaId"
                                       class="btn btn-sm btn-warning" title="Editar">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-action="Delete"
                                       asp-route-usuarioId="@item.UsuarioId"
                                       asp-route-agenciaId="@item.AgenciaId"
                                       class="btn btn-sm btn-danger" title="Eliminar">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }

    </div>
</div>
