@model IEnumerable<Apuestas_Sis.Models.UsuarioAgencia>

@{
    ViewData["Title"] = "Usuarios por Agencia";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Usuarios por Agencia</h1>
    <a asp-action="Create" class="btn btn-sm btn-primary shadow-sm">
        <i class="fas fa-plus fa-sm text-white-50"></i>
        Nuevo
    </a>
</div>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Asignación de usuarios a agencias</h6>
    </div>

    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered table-hover" id="dataTable" width="100%" cellspacing="0">
                <thead class="thead-light">
                    <tr>
                        <th>Usuario</th>
                        <th>Agencia</th>
                        <th class="text-center">Estado</th>
                        <th>Asignado</th>
                        <th>Desactivado</th>
                        <th class="text-center" style="width: 140px;">Acciones</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Usuario.Apellidos @item.Usuario.Nombres</td>
                            <td>@item.Agencia.Nombre</td>

                            <td class="text-center">
                                @if (item.Activo)
                                {
                                    <span class="badge badge-success">Activo</span>
                                }
                                else
                                {
                                    <span class="badge badge-danger">Inactivo</span>
                                }
                            </td>

                            <td>@item.FechaAsignacion.ToString("yyyy-MM-dd HH:mm")</td>

                            <td>
                                @(item.FechaDesactivacion.HasValue
                                    ? item.FechaDesactivacion.Value.ToString("yyyy-MM-dd HH:mm")
                                    : "-")
                            </td>

                            <td class="text-center">
                                <a asp-action="Edit"
                                   asp-route-usuarioId="@item.UsuarioId"
                                   asp-route-agenciaId="@item.AgenciaId"
                                   class="btn btn-sm btn-warning"
                                   title="Editar">
                                    <i class="fas fa-edit"></i>
                                </a>

                                <a asp-action="Details"
                                asp-route-id="@item.UsuarioId"
                                class="btn btn-sm btn-info"
                                title="Detalle">
                                 <i class="fas fa-eye"></i>
                                </a>


                                <a asp-action="Delete"
                                   asp-route-usuarioId="@item.UsuarioId"
                                   asp-route-agenciaId="@item.AgenciaId"
                                   class="btn btn-sm btn-danger"
                                   title="Eliminar">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <!-- DataTables (SB Admin 2) -->
    <script src="~/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="~/vendor/datatables/dataTables.bootstrap4.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#dataTable').DataTable({
                pageLength: 10,
                order: [[3, "desc"]],
                language: {
                    search: "Buscar:",
                    lengthMenu: "Mostrar _MENU_ registros",
                    info: "Mostrando _START_ a _END_ de _TOTAL_ registros",
                    infoEmpty: "Mostrando 0 a 0 de 0 registros",
                    infoFiltered: "(filtrado de _MAX_ registros)",
                    zeroRecords: "No se encontraron resultados",
                    paginate: { previous: "Anterior", next: "Siguiente" }
                }
            });
        });
    </script>
}

