@model Apuestas_Sis.Models.UsuarioRol

@{
    ViewData["Title"] = "Asignar Rol";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Asignar Rol</h1>
    <a asp-action="Index" class="btn btn-sm btn-secondary shadow-sm">
        <i class="fas fa-arrow-left fa-sm text-white-50"></i>
        Volver
    </a>
</div>

<div class="row">
    <div class="col-lg-7">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Registro de asignación</h6>
            </div>

            <div class="card-body">
                <form asp-action="Create" method="post" autocomplete="off">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <!-- Usuario -->
                    <div class="form-group">
                        <label asp-for="UsuarioId" class="control-label"></label>
                        <select asp-for="UsuarioId"
                                class="custom-select"
                                asp-items="ViewBag.UsuarioId">
                            <option value="">-- Seleccione un usuario --</option>
                        </select>
                        <span asp-validation-for="UsuarioId" class="text-danger"></span>
                    </div>

                    <!-- Rol -->
                    <div class="form-group">
                        <label asp-for="RolId" class="control-label"></label>
                        <select asp-for="RolId" id="RolSelect" class="custom-select" asp-items="ViewBag.RolId">
                            <option value="">-- Seleccione un rol --</option>
                        </select>
                        <span asp-validation-for="RolId" class="text-danger"></span>
                    </div>

                    <!-- Agencia -->
                    <div class="form-group">
                        <label asp-for="AgenciaId" class="control-label"></label>
                        <select asp-for="AgenciaId" id="AgenciaSelect" class="custom-select" asp-items="ViewBag.AgenciaId">
                            <option value="">-- Seleccione una agencia --</option>
                        </select>
                        <small class="form-text text-muted">
                            Seleccione una agencia cuando el rol no sea global.
                        </small>
                        <span asp-validation-for="AgenciaId" class="text-danger"></span>
                        <small id="RolHelp" class="form-text text-muted"></small>
                    </div>

                    <hr />

                    <div class="form-row">
                        <div class="col-md-6 mb-2">
                            <div class="custom-control custom-checkbox">
                                <input asp-for="EsGlobal" class="custom-control-input" id="EsGlobalCheck" />
                                <label class="custom-control-label" for="EsGlobalCheck">
                                    Rol global (Administrador)
                                </label>
                            </div>
                        </div>

                        <div class="col-md-6 mb-2">
                            <div class="custom-control custom-checkbox">
                                <input asp-for="Activo" class="custom-control-input" id="ActivoCheck" />
                                <label class="custom-control-label" for="ActivoCheck">
                                    Activo
                                </label>
                            </div>
                        </div>
                    </div>

                    <div class="mt-4 d-flex justify-content-end">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save fa-sm"></i>
                            Guardar
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        (function () {
            var chkGlobal = document.getElementById('EsGlobalCheck');
            var agenciaSelect = document.getElementById('AgenciaSelect');
            var rolSelect = document.getElementById('RolSelect');
            var rolHelp = document.getElementById('RolHelp'); // opcional

            function toggleGlobal() {
                var isGlobal = chkGlobal && chkGlobal.checked;

                // Agencia
                if (agenciaSelect) {
                    if (isGlobal) {
                        agenciaSelect.value = '';
                        agenciaSelect.setAttribute('disabled', 'disabled');
                    } else {
                        agenciaSelect.removeAttribute('disabled');
                    }
                }

                // Rol
                if (rolSelect) {
                    if (isGlobal) {
                        rolSelect.value = '';
                        rolSelect.setAttribute('disabled', 'disabled');
                        if (rolHelp) rolHelp.innerText = "Rol asignado automáticamente: Administrador (Global).";
                    } else {
                        rolSelect.removeAttribute('disabled');
                        if (rolHelp) rolHelp.innerText = "";
                    }
                }
            }

            if (chkGlobal) {
                chkGlobal.addEventListener('change', toggleGlobal);
            }

            // Inicializar al cargar
            toggleGlobal();
        })();
    </script>
}


