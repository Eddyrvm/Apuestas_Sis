@model IEnumerable<Apuestas_Sis.Models.Usuario>

@{
    ViewData["Title"] = "Usuarios";
}

<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Gestión de Usuarios</h1>

    <a asp-action="Create" class="btn btn-sm btn-primary shadow-sm">
        <i class="fas fa-user-plus fa-sm text-white-50"></i>
        Nuevo Usuario
    </a>
</div>

<!-- Card -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">
            Listado de Usuarios Registrados
        </h6>
    </div>

    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered table-hover" width="100%" cellspacing="0">
                <thead class="thead-light">
                    <tr>
                        <th>Usuario</th>
                        <th>Nombres</th>
                        <th>Apellidos</th>
                        <th>Cédula</th>
                        <th>Teléfono</th>
                        <th>Estado</th>
                        <th>Fecha Registro</th>
                        <th class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.UsuarioLogin</td>
                            <td>@item.Nombres</td>
                            <td>@item.Apellidos</td>
                            <td>@item.Cedula</td>
                            <td>@item.Telefono</td>
                            <td class="text-center">
                                @if (item.Activo)
                                {
                                    <span class="badge badge-success">Activo</span>
                                }
                                else
                                {
                                    <span class="badge badge-secondary">Inactivo</span>
                                }
                            </td>
                            <td>
                                @item.FechaRegistro.ToString("dd/MM/yyyy HH:mm")
                            </td>
                            <td class="text-center">
                                <a asp-action="Edit"
                                   asp-route-id="@item.UsuarioId"
                                   class="btn btn-sm btn-warning"
                                   title="Editar">
                                    <i class="fas fa-edit"></i>
                                </a>

                                <a asp-action="Delete"
                                   asp-route-id="@item.UsuarioId"
                                   class="btn btn-sm btn-danger"
                                   title="Eliminar">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

